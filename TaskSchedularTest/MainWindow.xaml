<Window x:Class="TaskSchedularTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Task Schedular Test" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="307*"/>
            <ColumnDefinition Width="210*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Left" Margin="31,22,0,0" VerticalAlignment="Top" Width="75" Click="btnStart_Click"/>
        <Button x:Name="btnStop" Content="Stop" HorizontalAlignment="Left" Margin="128,22,0,0" VerticalAlignment="Top" Width="75" Click="btnStop_Click"/>
        <TextBlock x:Name="lblLog" HorizontalAlignment="Left" Margin="280,71,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="239" Width="198" Grid.ColumnSpan="2" Text="Check Console for logging information"/>
        <Button x:Name="btnAddTask" Content="Add a Task (recurrs every 30 sec" HorizontalAlignment="Left" Margin="31,194,0,0" VerticalAlignment="Top" Width="172" Click="btnAddTask_Click"/>

    </Grid>
</Window>
